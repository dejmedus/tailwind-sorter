{
  "open": [
    {
      "tab": "zsh",
      "commands": ["*CLOSE"],
      "description": "close current tab"
    },
    {
      "tab": "git",
      "commands": ["git branch"],
      "description": "open git tab",
      "icon": "git-merge",
      "shell": "bash"
    },
    {
      "tab": "test",
      "commands": ["*echo npm run test"],
      "description": "open test tab",
      "icon": "beaker",
      "shell": "bash"
    }
  ],
  "test": [
    {
      "tab": "test",
      "commands": ["npm run test"],
      "description": "run tests"
    }
  ],
  "upgrade": [
    {
      "tab": "upgrade",
      "commands": [
        "code CHANGELOG.md",
        "code README.md",
        "bash scripts/VERSION.sh",
        "echo '1. Update CHANGELOG.md. 2. Update README.md. 3. Ensure tests pass. 4. vsce publish 5. ovsx publish'"
      ],
      "description": "before upgrade to do list",
      "icon": "gear",
      "shell": "bash"
    },
    {
      "tab": "test",
      "commands": [
        "rm -rf .vscode-test",
        "rm -rf dist",
        "rm -rf out",
        "npm run test"
      ],
      "description": "run tests"
    }
  ]
}
